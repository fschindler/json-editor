{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "incremental": true,
        "lib": ["es2019", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": ".",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es2019",
        "paths": {
            "@sagold/react-json-editor": ["packages/react-json-editor/src/index.ts"],
            "@sagold/rje-code-widgets": ["packages/rje-code-widgets/src/index.ts"],
            "headless-json-editor": ["packages/headless-json-editor/src/index.ts"]
        }
    },
    "references": [
        { "path": "./packages/headless-json-editor" },
        { "path": "./packages/react-json-editor" },
        { "path": "./packages/rje-code-widgets" }
    ],
    "exclude": ["node_modules", "tmp"]
}
